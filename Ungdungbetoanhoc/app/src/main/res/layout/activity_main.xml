<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlayout"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:textStyle="bold"
        android:textColor="#f20"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ứng dụng bé toán học"
         />
    <EditText
        android:id="@+id/edittextthu1"
        android:hint="Nhập số thứ nhất"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/edittextthu2"
        android:hint="Nhập số thứ hai"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textviewketqua"
        android:textColor="#f20"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:text="10"
        android:textSize="50sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            android:padding="10dp"
            android:textSize="20sp"
            android:id="@+id/buttoncong"
            android:text=" + "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <Button
            android:layout_marginLeft="100dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:id="@+id/buttontru"
            android:text=" - "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            android:padding="10dp"
            android:textSize="20sp"
            android:id="@+id/buttonnhan"
            android:text=" * "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <Button
            android:layout_marginLeft="100dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:id="@+id/buttonchia"
            android:text=" / "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>
</LinearLayout>